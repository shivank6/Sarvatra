<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Womanâ€™s Salon"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="16dp" />

    <!-- Search bar -->
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for services"
        android:padding="12dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:background="#F3E5F5"
        android:drawablePadding="8dp"
        android:inputType="text" />
    </androidx.cardview.widget.CardView>

    <!-- Grid Layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="6dp"
        android:layout_marginBottom="16dp">

        <!-- Bleach & Detain -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_columnWeight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:background="#F3E5F5"
                    android:src="@drawable/img_43" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bleach_detain2"
                android:textSize="14sp"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_columnWeight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:background="#F3E5F5"
                    android:src="@drawable/img_44" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facial_clean_up1"
                android:textSize="14sp"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_columnWeight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="#F3E5F5"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_46" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hair Care"
                android:textSize="14sp"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end" />
